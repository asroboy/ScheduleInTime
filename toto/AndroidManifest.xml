<?xml version="1.0" encoding="utf-8"?>
<manifest xmlns:android="http://schemas.android.com/apk/res/android"
    package="fr.esipe.oc3.km"
    android:versionCode="1"
    android:versionName="1.0" >

    <uses-sdk
        android:minSdkVersion="11"
        android:targetSdkVersion="16" />

    <uses-permission android:name="android.permission.INTERNET" />

    <application
        android:allowBackup="true"
        android:icon="@drawable/ic_launcher"
        android:label="@string/app_name"
        android:theme="@style/AppTheme" >
        <activity
            android:name="fr.esipe.oc3.km.ui.PlanningActivity"
            android:label="@string/app_name"
            android:parentActivityName="FragmentActivity" >
            <intent-filter android:label="@string/app_name" >
                <action android:name="android.intent.action.MAIN" />

                <category android:name="android.intent.category.LAUNCHER" />

                <data android:mimeType="vnd.android.cursor.item/vnd.km.provider.formation" />
            </intent-filter>
        </activity>
        <activity android:name="fr.esipe.oc3.km.PlanningPreference" >
        </activity>

        <provider
            android:name="fr.esipe.oc3.km.db.FormationContentProvider"
            android:authorities="fr.esipe.oc3.provider.formation" />

        <service android:name="fr.esipe.oc3.km.UpdatingDatabaseService" >
        </service>
    </application>

</manifest>